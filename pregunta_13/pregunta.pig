fs -rm -f -r output;

u = LOAD 'data.csv' USING PigStorage(',') 
    AS (id:int, 
        firstname:CHARARRAY, 
        surname:CHARARRAY, 
        birthday:CHARARRAY, 
        color:CHARARRAY, 
        quantity:INT);

b = FOREACH u GENERATE color;
c = FILTER b BY color MATCHES '^b.*';

colors = FOREACH u GENERATE FLATTEN(color) as color;
response = FILTER colors BY color MATCHES '^b.*';
STORE response INTO './output'  USING PigStorage(',');
