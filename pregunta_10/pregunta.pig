fs -rm -f -r output;

data = LOAD 'data.csv' USING PigStorage(',') 
    AS (id:int, 
        firstname:CHARARRAY, 
        surname:CHARARRAY, 
        birthday:CHARARRAY, 
        color:CHARARRAY, 
        quantity:INT);

ans = FOREACH data GENERATE surname as surname, SIZE(surname) as size;
orden = LIMIT (ORDER ans BY $1 DESC, $0 ASC) 5;
